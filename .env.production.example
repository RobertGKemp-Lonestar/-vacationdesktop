# VacationDesktop Production Environment Variables
# Copy this file to .env in your production environment and update values

# Django Security
SECRET_KEY=generate-new-secure-secret-key-for-production
DEBUG=False

# Database Configuration
# Option 1: Use DATABASE_URL (Railway/Render/Heroku style)
DATABASE_URL=postgresql://user:password@host:port/database_name

# Option 2: Individual database settings (if DATABASE_URL not available)
DB_NAME=vacationdesktop_prod
DB_USER=your_db_user
DB_PASSWORD=secure_database_password
DB_HOST=your.database.host.com
DB_PORT=5432

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.railway.app,yourdomain.com,www.yourdomain.com

# Email Configuration (Mailgun)
EMAIL_HOST=smtp.mailgun.org
EMAIL_HOST_USER=forms@kemp-it.com
EMAIL_HOST_PASSWORD=your-production-mailgun-password
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_USE_TLS=False
DEFAULT_FROM_EMAIL=forms@kemp-it.com

# Redis Configuration (if using)
REDIS_URL=redis://your-redis-host:6379/0

# Security Settings (optional)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-url